package milocraft.main.init;

import milocraft.main.*;
import net.minecraft.client.*;
import net.minecraft.client.resources.model.*;
import net.minecraft.item.*;
import net.minecraftforge.fml.common.registry.*;

public class Items {

	public static Item test_item;

	public static void init() {
		test_item = new Item().setUnlocalizedName("test_item");
	}

	public static void register() {
		GameRegistry.registerItem(test_item, "Test Item");
	}

	public static void registerRenders() {

	}
	
	public static void registerRender (Item item) {
		Minecraft.getMinecraft().getRenderItem().getItemModelMesher().register(item, 0, new ModelResourceLocation(Reference.MOD_ID + ":" + item.getUnlocalizedName().substring(5)));
	}
}
